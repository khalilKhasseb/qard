APP_NAME=TapIt
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# IMPORTANT SECURITY NOTES:
# - APP_DEBUG must be false in production
# - APP_KEY must be generated with: php artisan key:generate
# - Never commit the actual .env file to version control

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# Security: Set SESSION_SECURE_COOKIE=true and SESSION_SAME_SITE=strict in production
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Frontend URL for CORS (customize for your frontend domain)
FRONTEND_URL=http://localhost:3000

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

VITE_APP_NAME="${APP_NAME}"

# Lahza Payment Gateway Configuration
# IMPORTANT: Get these credentials from your Lahza dashboard
# https://dashboard.lahza.io/

# Payment gateway to use: 'lahza' or 'cash'
PAYMENT_GATEWAY=lahza

# Your Lahza public key (for client-side operations)
# Use test key for development, live key for production
LAHZA_PUBLIC_KEY=

# Your Lahza secret key (for server-side operations)
# NEVER expose this in frontend or commit to version control
LAHZA_SECRET_KEY=

# Webhook secret for verifying webhook signatures
# Get this from Lahza dashboard -> Webhooks
LAHZA_WEBHOOK_SECRET=

# Set to false for production (use live mode)
LAHZA_TEST_MODE=true

# Base URL for Lahza API
# For production: https://api.lahza.io
LAHZA_BASE_URL=https://api.lahza.io

# Currency for payments: 'USD', 'ILS', or 'JOD'
LAHZA_CURRENCY=USD

# Available payment channels (comma-separated)
# Options: card,bank,ussd,qr,mobile_money,bank_transfer
LAHZA_CHANNELS=card

# Verify webhook signatures (recommended: true in production)
LAHZA_VERIFY_WEBHOOKS=true

# Timeout for Lahza API requests (seconds)
LAHZA_TIMEOUT=30

# Retry configuration for failed API calls
LAHZA_RETRY_ATTEMPTS=3
LAHZA_RETRY_DELAY=5

# Logging level for payment operations
LAHZA_LOG_LEVEL=info

# Payment limits (in base currency)
MAX_PAYMENT_AMOUNT=10000.00
MIN_PAYMENT_AMOUNT=0.01
